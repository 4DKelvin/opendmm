#!/usr/bin/env ruby

require 'json'
require 'optparse'
require 'pp'
require 'opendmm'

options = { json: false }
OptionParser.new do |opts|
  opts.on('-j', '--[no-]json', 'JSON mode') do |j|
    options[:json] = j
  end
end.parse!

details = OpenDMM.search!(ARGV.first)
if details
  if options[:json]
    puts JSON.pretty_generate(details)
  else
    pp details
  end
else
  puts 'Unknown product: ' + ARGV.first
end
